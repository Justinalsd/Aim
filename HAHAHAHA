    enabled = true,
    text = "Box Color",
    flag = "Color_1",
    tooltip = "Box Color",
    color = Color3.new(255, 255, 255),
    trans = 0,
    open = false,
    callback = function(Value)
        FeatureTable.Visuals.Box.Color = Value
    end
})
sections.VisualTab:AddColor({ --Tracer Color
    enabled = true,
    text = "Tracer Color",
    flag = "Color_1",
    tooltip = "Tracer Color",
    color = Color3.new(255, 255, 255),
    trans = 0,
    open = false,
    callback = function(Value)
        FeatureTable.Visuals.Tracers.Color = Value
    end
})
